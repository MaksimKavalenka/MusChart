<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:type="linear" android:endColor="#B5E61D" android:startColor="#B5E61D" android:angle="90" />
            <stroke android:width="2dp" android:color="#008000" />
            <corners android:radius="10dp" />
            <padding android:left="15dp" android:right="15dp" android:top="15dp" android:bottom="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:type="linear" android:endColor="#006F37" android:startColor="#27CB58" android:angle="90" />
            <stroke android:width="2dp" android:color="#008000" />
            <corners android:radius="10dp" />
            <padding android:left="15dp" android:right="15dp" android:top="15dp" android:bottom="15dp" />
        </shape>
    </item>
</selector>